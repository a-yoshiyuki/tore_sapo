<h3><%= @user.name %></h3>
<img src=<%= @user.image %> class = "icon_image">
<p><%= @user.self_introduction %></p>
<p><%= @user.career %></p>
<% if user_signed_in? && current_user %>
  <div id="follow-button-<%= @user.id %>">
    <% if current_user.following?(@user) %>
      <%= render 'relationships/unfollow_button', user: @user %>
    <% else %>
      <%= render 'relationships/follow_button', user: @user %>
    <% end %>
  </div>

  <% unless @user.id == current_user.id %>
    <% if @have_message_room == true %>
      <%= button_to "メッセージを送る", message_room_path, { method: :get } %>
    <% else %>
      <%= form_with model: @message_room, url: message_rooms_path, method: :post, local: true do |message_room| %>
        <%= message_room.fields_for :user_message_room do |user_message_room| %>
          <%= user_message_room.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= message_room.submit "メッセージで相談" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
