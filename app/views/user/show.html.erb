<h3><%= @trainer.name %></h3>
<img src=<%= @trainer.image %> class = "icon_image">
<p><%= @trainer.self_introduction %></p>
<p><%= @trainer.career %></p>
<% if user_signed_in? && current_user %>
  <div id="follow-button-#{user.id}">
    <% if current_user.following?(@trainer) %>
      <%= render 'relationships/unfollow_button', user: @trainer %>
    <% else %>
      <%= render 'relationships/follow_button', user: @trainer %>
    <% end %>
  </div>
<% end %>
