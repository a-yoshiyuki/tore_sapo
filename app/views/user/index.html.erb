<body>
  <div class="container">
    <div class="row">
      <div class="col-2">
        <%= render 'shared/side_bar', user: current_user %>
      </div>
      <div class="col-10">
        <% @users.each do |user| %>
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-3">
                <img src=<%= user.image %> class = "card_icon_image">
              </div>
              <div class="col-md-9">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to user_path(user) do %>
                      <%= user.name %>
                    <% end %>
                  </h5>
                  <p class="card-text">
                    <%= user.self_introduction %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>